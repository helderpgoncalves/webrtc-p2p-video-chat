<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meeting Room</title>
    <script
      src="https://kit.fontawesome.com/ebf4dda567.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/style/room.css" />
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>

    <script src="/socket.io/socket.io.js " defer></script>
    <script src="/js/room.js" defer></script>
  </head>
  <body>
    <div class="videos-container"></div>
    <footer>
      <div class="meeting-id" onclick="copyToClipBoard()">
        Room ID: <span><%= roomId %></span>
        <span class="material-icons"> content_copy </span>
      </div>
      <div class="button-container" onclick="muteUnmute(this)">
        <!-- <i class="fas fa-microphone-slash"></i> -->
        <i class="fas fa-microphone-slash"></i>
      </div>
      <div class="button-container" onclick="toggleVideo(this)">
        <i class="fas fa-video-slash"></i>
      </div>
      <div class="button-container" id="leave-btn" onclick="leaveMeeting()">
        <span class="material-icons"> logout </span>
      </div>
    </footer>
  </body>
</html>
